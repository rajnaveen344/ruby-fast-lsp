{
  "name": "ruby-fast-lsp",
  "displayName": "Ruby Fast LSP",
  "description": "High-performance Ruby Language Server with fast code navigation, syntax highlighting, and intelligent code insights for Ruby developers",
  "version": "2025.26.0",
  "publisher": "naveenraj",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rajnaveen344/ruby-fast-lsp"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters",
    "Snippets",
    "Language Packs"
  ],
  "keywords": [
    "ruby",
    "lsp",
    "language-server",
    "intellisense",
    "code-navigation",
    "productivity",
    "development"
  ],
  "activationEvents": [
    "onLanguage:ruby"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ruby",
        "aliases": [
          "Ruby",
          "ruby"
        ],
        "extensions": [
          ".rb",
          ".rake",
          ".gemspec",
          "Gemfile",
          "Rakefile"
        ]
      }
    ],
    "configuration": {
      "title": "Ruby Fast LSP",
      "properties": {
        "rubyFastLsp.rubyVersion": {
          "type": "string",
          "enum": [
            "auto",
            "1.9",
            "2.0",
            "2.1",
            "2.2",
            "2.3",
            "2.4",
            "2.5",
            "2.6",
            "2.7",
            "3.0",
            "3.1",
            "3.2",
            "3.3",
            "3.4"
          ],
          "default": "auto",
          "description": "Ruby version to use for core class stubs and language features. 'auto' will detect the version from your workspace (.ruby-version, Gemfile, etc.) or system Ruby installation.",
          "enumDescriptions": [
            "Automatically detect Ruby version from workspace or system",
            "Ruby 1.9.x",
            "Ruby 2.0.x",
            "Ruby 2.1.x",
            "Ruby 2.2.x",
            "Ruby 2.3.x",
            "Ruby 2.4.x",
            "Ruby 2.5.x",
            "Ruby 2.6.x",
            "Ruby 2.7.x",
            "Ruby 3.0.x",
            "Ruby 3.1.x",
            "Ruby 3.2.x",
            "Ruby 3.3.x",
            "Ruby 3.4.x"
          ]
        },
        "rubyFastLsp.stubsPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to Ruby stubs directory. Leave empty to use bundled stubs."
        }

      }
    },
    "views": {
      "explorer": [
        {
          "id": "rubyNamespaceTree",
          "name": "Ruby Namespace Tree",
          "visibility": "visible",
          "icon": "$(module)"
        }
      ]
    },
    "commands": [
      {
          "command": "rubyNamespaceTree.refresh",
          "title": "Refresh",
          "icon": "$(refresh)"
        }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rubyNamespaceTree.refresh",
          "when": "view == rubyNamespaceTree",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}